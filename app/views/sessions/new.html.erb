<div class="container d-flex h-100 w-100 flex-column">
  <div class="row h-100">
    <div class="col login form">
      <%= form_for(:session, url: login_path, html: {class: "form-signin"}) do |f| %>
        <h1 class="text-center mb-3">Group chat</h1>
        <% flash.each do |message_type, message| %>
          <div class="alert alert-<%= message_type %>"><%= message %></div>
        <% end %>
        <div class="form-group row">
          <label for="session_login_id" class="col-sm-3 col-form-label">ID</label>
          <div class="col-sm-9">
            <%= f.text_field :login_id, required: 'required', placeholder: 'Login ID', class:'form-control form-control-lg' %>
          </div>
        </div>
        <div class="form-group row">
          <label for="session_password" class="col-sm-3 col-form-label">password</label>
          <div class="col-sm-9">
            <%= f.password_field :password, required: 'required', placeholder: 'password', class:'form-control form-control-lg' %>
          </div>
        </div>
        <%= f.submit "Log in", :class=>"btn btn-outline-warning btn-lg d-block mx-auto mt-5" %>
      <% end %>
    </div>
  </div>
</div>
